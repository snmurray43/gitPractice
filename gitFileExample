-l-z-b-th sh--k h-r h--d -v-r th-s l-tt-r. -t c-nv-nc-d h-r th-t
-cc-d-nt -nly c--ld d-sc-v-r t-  r.  -ngl-y h-r s-st-r's b--ng -n t-wn.

 --r w--ks p-ss-d -w-y, -nd  -n- s-w n-th-ng -f h-m.  h- -nd--v--r-d t-
