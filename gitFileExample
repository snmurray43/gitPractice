th-nk -t -s w-ll -xpr-ss-d.”

 -  -th-r-n- -nd  yd--, n--th-r th- l-tt-r n-r -ts wr-t-r w-r- -n -ny
d-gr-- -nt-r-st-ng. -t w-s n-xt t- -mp-ss-bl- th-t th--r c--s-n sh--ld
