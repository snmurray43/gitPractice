 -zzy c--ld t-ll -s wh-t r-l-t--ns h- h-s n-w l-v-ng, b-tt-r th-n -ny
-th-r p-rs-n.”

-l-z-b-th w-s -t n- l-ss t- -nd-rst-nd fr-m wh-nc- th-s d-f-r-nc- t- h-r
--th-r-ty pr-c--d-d; b-t -t w-s n-t -n h-r p-w-r t- g-v- -ny -nf-rm-t--n
-f s- s-t-sf-ct-ry - n-t-r- -s th- c-mpl-m-nt d-s-rv-d.  h- h-d n-v-r
h--rd -f h-s h-v-ng h-d -ny r-l-t--ns, -xc-pt - f-th-r -nd m-th-r, b-th
-f wh-m h-d b--n d--d m-ny y--rs. -t w-s p-ss-bl-, h-w-v-r, th-t s-m- -f
h-s c-mp-n--ns -n th- ----sh-r- m-ght b- -bl- t- g-v- m-r- -nf-rm-t--n;
-nd th--gh sh- w-s n-t v-ry s-ng--n- -n -xp-ct-ng -t, th- -ppl-c-t--n
w-s - s-m-th-ng t- l--k f-rw-rd t-.

-v-ry d-y -t  -ngb--rn w-s n-w - d-y -f -nx--ty; b-t th- m-st -nx---s
p-rt -f --ch w-s wh-n th- p-st w-s -xp-ct-d.  h- -rr-v-l -f l-tt-rs
w-s th- gr-nd -bj-ct -f -v-ry m-rn-ng's -mp-t--nc-.  hr--gh l-tt-rs,
wh-t-v-r -f g--d -r b-d w-s t- b- t-ld w--ld b- c-mm-n-c-t-d, -nd -v-ry
s-cc--d-ng d-y w-s -xp-ct-d t- br-ng s-m- n-ws -f -mp-rt-nc-.

 -t b-f-r- th-y h--rd -g--n fr-m  r.  -rd-n-r, - l-tt-r -rr-v-d f-r
th--r f-th-r, fr-m - d-ff-r-nt q--rt-r, fr-m  r.  -ll-ns; wh-ch, -s  -n-
h-d r-c--v-d d-r-ct--ns t- -p-n -ll th-t c-m- f-r h-m -n h-s -bs-nc-,
