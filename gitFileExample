m-rry -s s--n -s h- c--ld, pr-v-d-d h- ch-s- w-th d-scr-t--n; -nd h-d
-nc- p--d h-m - v-s-t -n h-s h-mbl- p-rs-n-g-, wh-r- sh- h-d p-rf-ctly
-ppr-v-d -ll th- -lt-r-t--ns h- h-d b--n m-k-ng, -nd h-d -v-n v--chs-f-d
