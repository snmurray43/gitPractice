“ h-y -r-s- ch--fly fr-m wh-t -s p-ss-ng -t th- t-m-, -nd th--gh -
s-m-t-m-s -m-s- mys-lf w-th s-gg-st-ng -nd -rr-ng-ng s-ch l-ttl- -l-g-nt
c-mpl-m-nts -s m-y b- -d-pt-d t- -rd-n-ry -cc-s--ns, - -lw-ys w-sh t-
g-v- th-m -s -nst-d--d -n --r -s p-ss-bl-.”

 r.  -nn-t's -xp-ct-t--ns w-r- f-lly -nsw-r-d.  -s c--s-n w-s -s -bs-rd
-s h- h-d h-p-d, -nd h- l-st-n-d t- h-m w-th th- k--n-st -nj-ym-nt,
