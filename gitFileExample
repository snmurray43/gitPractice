 h-pt-r 29


 r.  -ll-ns's tr--mph, -n c-ns-q--nc- -f th-s -nv-t-t--n, w-s c-mpl-t-.
 h- p-w-r -f d-spl-y-ng th- gr-nd--r -f h-s p-tr-n-ss t- h-s w-nd-r-ng
v-s-t-rs, -nd -f l-tt-ng th-m s-- h-r c-v-l-ty t-w-rds h-ms-lf -nd h-s
w-f-, w-s -x-ctly wh-t h- h-d w-sh-d f-r; -nd th-t -n -pp-rt-n-ty
-f d--ng -t sh--ld b- g-v-n s- s--n, w-s s-ch -n -nst-nc- -f  -dy
 -th-r-n-'s c-nd-sc-ns--n, -s h- kn-w n-t h-w t- -dm-r- -n--gh.

“- c-nf-ss,” s--d h-, “th-t - sh--ld n-t h-v- b--n -t -ll s-rpr-s-d by
h-r l-dysh-p's -sk-ng -s -n  -nd-y t- dr-nk t-- -nd sp-nd th- -v-n-ng -t
 -s-ngs. - r-th-r -xp-ct-d, fr-m my kn-wl-dg- -f h-r -ff-b-l-ty, th-t -t
w--ld h-pp-n.  -t wh- c--ld h-v- f-r-s--n s-ch -n -tt-nt--n -s th-s?  h-
c--ld h-v- -m-g-n-d th-t w- sh--ld r-c--v- -n -nv-t-t--n t- d-n- th-r-
(-n -nv-t-t--n, m-r--v-r, -ncl-d-ng th- wh-l- p-rty) s- -mm-d--t-ly
-ft-r y--r -rr-v-l!”

“- -m th- l-ss s-rpr-s-d -t wh-t h-s h-pp-n-d,” r-pl--d  -r  -ll--m,
“fr-m th-t kn-wl-dg- -f wh-t th- m-nn-rs -f th- gr--t r--lly -r-, wh-ch
my s-t--t--n -n l-f- h-s -ll-w-d m- t- -cq--r-. -b--t th- c--rt, s-ch
-nst-nc-s -f -l-g-nt br--d-ng -r- n-t -nc-mm-n.”

 c-rc-ly -nyth-ng w-s t-lk-d -f th- wh-l- d-y -r n-xt m-rn-ng b-t th--r
v-s-t t-  -s-ngs.  r.  -ll-ns w-s c-r-f-lly -nstr-ct-ng th-m -n wh-t
th-y w-r- t- -xp-ct, th-t th- s-ght -f s-ch r--ms, s- m-ny s-rv-nts, -nd
s- spl-nd-d - d-nn-r, m-ght n-t wh-lly -v-rp-w-r th-m.

 h-n th- l-d--s w-r- s-p-r-t-ng f-r th- t--l-tt-, h- s--d t- -l-z-b-th--

“ - n-t m-k- y--rs-lf -n--sy, my d--r c--s-n, -b--t y--r -pp-r-l.  -dy
 -th-r-n- -s f-r fr-m r-q--r-ng th-t -l-g-nc- -f dr-ss -n -s wh-ch
b-c-m-s h-rs-lf -nd h-r d--ght-r. - w--ld -dv-s- y-- m-r-ly t- p-t -n
wh-t-v-r -f y--r cl-th-s -s s-p-r--r t- th- r-st--th-r- -s n- -cc-s--n
f-r -nyth-ng m-r-.  -dy  -th-r-n- w-ll n-t th-nk th- w-rs- -f y--
f-r b--ng s-mply dr-ss-d.  h- l-k-s t- h-v- th- d-st-nct--n -f r-nk
pr-s-rv-d.”

 h-l- th-y w-r- dr-ss-ng, h- c-m- tw- -r thr-- t-m-s t- th--r d-ff-r-nt
d--rs, t- r-c-mm-nd th--r b--ng q--ck, -s  -dy  -th-r-n- v-ry m-ch
-bj-ct-d t- b- k-pt w--t-ng f-r h-r d-nn-r.  -ch f-rm-d-bl- -cc--nts -f
h-r l-dysh-p, -nd h-r m-nn-r -f l-v-ng, q--t- fr-ght-n-d  -r--  -c-s
wh- h-d b--n l-ttl- -s-d t- c-mp-ny, -nd sh- l--k-d f-rw-rd t- h-r
-ntr-d-ct--n -t  -s-ngs w-th -s m-ch -ppr-h-ns--n -s h-r f-th-r h-d d-n-
t- h-s pr-s-nt-t--n -t  t.  -m-s's.

-s th- w--th-r w-s f-n-, th-y h-d - pl--s-nt w-lk -f -b--t h-lf -
m-l- -cr-ss th- p-rk. -v-ry p-rk h-s -ts b---ty -nd -ts pr-sp-cts; -nd
-l-z-b-th s-w m-ch t- b- pl--s-d w-th, th--gh sh- c--ld n-t b- -n s-ch
r-pt-r-s -s  r.  -ll-ns -xp-ct-d th- sc-n- t- -nsp-r-, -nd w-s b-t
sl-ghtly -ff-ct-d by h-s -n-m-r-t--n -f th- w-nd-ws -n fr-nt -f th-
h--s-, -nd h-s r-l-t--n -f wh-t th- gl-z-ng -lt-g-th-r h-d -r-g-n-lly
c-st  -r  -w-s d-  --rgh.

 h-n th-y -sc-nd-d th- st-ps t- th- h-ll,  -r--'s -l-rm w-s -v-ry
m-m-nt -ncr--s-ng, -nd -v-n  -r  -ll--m d-d n-t l--k p-rf-ctly c-lm.
-l-z-b-th's c--r-g- d-d n-t f--l h-r.  h- h-d h--rd n-th-ng -f  -dy
 -th-r-n- th-t sp-k- h-r -wf-l fr-m -ny -xtr--rd-n-ry t-l-nts -r
m-r-c-l--s v-rt--, -nd th- m-r- st-t-l-n-ss -f m-n-y -r r-nk sh- th--ght
sh- c--ld w-tn-ss w-th--t tr-p-d-t--n.

 r-m th- -ntr-nc--h-ll, -f wh-ch  r.  -ll-ns p--nt-d --t, w-th -
r-pt-r--s --r, th- f-n- pr-p-rt--n -nd th- f-n-sh-d -rn-m-nts, th-y
f-ll-w-d th- s-rv-nts thr--gh -n -nt--ch-mb-r, t- th- r--m wh-r-  -dy
 -th-r-n-, h-r d--ght-r, -nd  rs.  -nk-ns-n w-r- s-tt-ng.  -r l-dysh-p,
w-th gr--t c-nd-sc-ns--n, -r-s- t- r-c--v- th-m; -nd -s  rs.  -ll-ns h-d
s-ttl-d -t w-th h-r h-sb-nd th-t th- -ff-c- -f -ntr-d-ct--n sh--ld
b- h-rs, -t w-s p-rf-rm-d -n - pr-p-r m-nn-r, w-th--t -ny -f th-s-
-p-l-g--s -nd th-nks wh-ch h- w--ld h-v- th--ght n-c-ss-ry.

-n sp-t- -f h-v-ng b--n -t  t.  -m-s's,  -r  -ll--m w-s s- c-mpl-t-ly
-w-d by th- gr-nd--r s-rr--nd-ng h-m, th-t h- h-d b-t j-st c--r-g-
-n--gh t- m-k- - v-ry l-w b-w, -nd t-k- h-s s--t w-th--t s-y-ng - w-rd;
