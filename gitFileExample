s-nd; b-t -v-n -f _th-t_ th-y w--ld h-v- b--n gl-d t- b- c-rt--n.  r.
 -rd-n-r h-d w--t-d -nly f-r th- l-tt-rs b-f-r- h- s-t -ff.

 h-n h- w-s g-n-, th-y w-r- c-rt--n -t l--st -f r-c--v-ng c-nst-nt
-nf-rm-t--n -f wh-t w-s g--ng -n, -nd th--r -ncl- pr-m-s-d, -t p-rt-ng,
t- pr-v--l -n  r.  -nn-t t- r-t-rn t-  -ngb--rn, -s s--n -s h- c--ld,
