pr--ch-ng b-f-r- h-r.  h- h-d -ls- -sk-d h-m tw-c- t- d-n- -t  -s-ngs,
-nd h-d s-nt f-r h-m -nly th-  -t-rd-y b-f-r-, t- m-k- -p h-r p--l -f
