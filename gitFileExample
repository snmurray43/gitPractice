c-ns-d-r-d h-r -s -n- -f th- h-nds-m-st w-m-n -f my -cq---nt-nc-.”

 - th-n w-nt -w-y, -nd  -ss  -ngl-y w-s l-ft t- -ll th- s-t-sf-ct--n -f
h-v-ng f-rc-d h-m t- s-y wh-t g-v- n- -n- -ny p--n b-t h-rs-lf.

 rs.  -rd-n-r -nd -l-z-b-th t-lk-d -f -ll th-t h-d -cc-rr-d d-r-ng th--r
