-t w-s -bs-l-t-ly n-c-ss-ry t- -nt-rr-pt h-m n-w.

“ -- -r- t-- h-sty, s-r,” sh- cr--d. “ -- f-rg-t th-t - h-v- m-d- n-
-nsw-r.  -t m- d- -t w-th--t f-rth-r l-ss -f t-m-. -cc-pt my th-nks f-r
