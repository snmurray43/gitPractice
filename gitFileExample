“- h-v- -v-ry r--s-n -n th- w-rld t- th-nk -ll -f y--.  - m-t-v- c-n
-xc-s- th- -nj-st -nd -ng-n-r--s p-rt y-- -ct-d _th-r-_.  -- d-r- n-t,
y-- c-nn-t d-ny, th-t y-- h-v- b--n th- pr-nc-p-l, -f n-t th- -nly m--ns
-f d-v-d-ng th-m fr-m --ch -th-r---f -xp-s-ng -n- t- th- c-ns-r- -f th-
w-rld f-r c-pr-c- -nd -nst-b-l-ty, -nd th- -th-r t- -ts d-r-s--n f-r
d-s-pp--nt-d h-p-s, -nd -nv-lv-ng th-m b-th -n m-s-ry -f th- -c-t-st
k-nd.”

 h- p--s-d, -nd s-w w-th n- sl-ght -nd-gn-t--n th-t h- w-s l-st-n-ng
w-th -n --r wh-ch pr-v-d h-m wh-lly -nm-v-d by -ny f--l-ng -f r-m-rs-.
 - -v-n l--k-d -t h-r w-th - sm-l- -f -ff-ct-d -ncr-d-l-ty.

“ -n y-- d-ny th-t y-- h-v- d-n- -t?” sh- r-p--t-d.

 -th -ss-m-d tr-nq--ll-ty h- th-n r-pl--d: “- h-v- n- w-sh -f d-ny-ng
th-t - d-d -v-ryth-ng -n my p-w-r t- s-p-r-t- my fr--nd fr-m y--r
s-st-r, -r th-t - r-j--c- -n my s-cc-ss.  -w-rds _h-m_ - h-v- b--n
k-nd-r th-n t-w-rds mys-lf.”

-l-z-b-th d-sd--n-d th- -pp--r-nc- -f n-t-c-ng th-s c-v-l r-fl-ct--n,
b-t -ts m--n-ng d-d n-t -sc-p-, n-r w-s -t l-k-ly t- c-nc-l--t- h-r.

