h-d m-r-ly k-pt th- n-c-ss-ry t-rms, w-th--t f-rm-ng -t -t -ny -s-f-l
-cq---nt-nc-.  h- s-bj-ct--n -n wh-ch h-s f-th-r h-d br--ght h-m -p h-d
g-v-n h-m -r-g-n-lly gr--t h-m-l-ty -f m-nn-r; b-t -t w-s n-w -
g--d d--l c--nt-r-ct-d by th- s-lf-c-nc--t -f - w--k h--d, l-v-ng -n
r-t-r-m-nt, -nd th- c-ns-q--nt--l f--l-ngs -f --rly -nd -n-xp-ct-d
pr-sp-r-ty. - f-rt-n-t- ch-nc- h-d r-c-mm-nd-d h-m t-  -dy  -th-r-n- d-
 --rgh wh-n th- l-v-ng -f  -nsf-rd w-s v-c-nt; -nd th- r-sp-ct wh-ch
h- f-lt f-r h-r h-gh r-nk, -nd h-s v-n-r-t--n f-r h-r -s h-s p-tr-n-ss,
m-ngl-ng w-th - v-ry g--d -p-n--n -f h-ms-lf, -f h-s --th-r-ty -s -
cl-rgym-n, -nd h-s r-ght -s - r-ct-r, m-d- h-m -lt-g-th-r - m-xt-r- -f
pr-d- -nd -bs-q----sn-ss, s-lf--mp-rt-nc- -nd h-m-l-ty.

 -v-ng n-w - g--d h--s- -nd - v-ry s-ff-c--nt -nc-m-, h- -nt-nd-d t-
m-rry; -nd -n s--k-ng - r-c-nc-l--t--n w-th th-  -ngb--rn f-m-ly h- h-d
- w-f- -n v--w, -s h- m--nt t- ch--s- -n- -f th- d--ght-rs, -f h- f--nd
th-m -s h-nds-m- -nd -m--bl- -s th-y w-r- r-pr-s-nt-d by c-mm-n r-p-rt.
 h-s w-s h-s pl-n -f -m-nds---f -t-n-m-nt--f-r -nh-r-t-ng th--r f-th-r's
-st-t-; -nd h- th--ght -t -n -xc-ll-nt -n-, f-ll -f -l-g-b-l-ty -nd
s--t-bl-n-ss, -nd -xc-ss-v-ly g-n-r--s -nd d-s-nt-r-st-d -n h-s -wn
p-rt.

 -s pl-n d-d n-t v-ry -n s---ng th-m.  -ss  -nn-t's l-v-ly f-c-
c-nf-rm-d h-s v--ws, -nd -st-bl-sh-d -ll h-s str-ct-st n-t--ns -f wh-t
w-s d-- t- s-n--r-ty; -nd f-r th- f-rst -v-n-ng _sh-_ w-s h-s s-ttl-d
ch--c-.  h- n-xt m-rn-ng, h-w-v-r, m-d- -n -lt-r-t--n; f-r -n -
q--rt-r -f -n h--r's t-t----t-t- w-th  rs.  -nn-t b-f-r- br--kf-st, -
c-nv-rs-t--n b-g-nn-ng w-th h-s p-rs-n-g--h--s-, -nd l--d-ng n-t-r-lly
t- th- -v-w-l -f h-s h-p-s, th-t - m-str-ss m-ght b- f--nd f-r -t -t
