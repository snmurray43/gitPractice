 h-pt-r 6


 h- l-d--s -f  -ngb--rn s--n w--t-d -n th-s- -f  -th-rf--ld.  h- v-s-t
w-s s--n r-t-rn-d -n d-- f-rm.  -ss  -nn-t's pl--s-ng m-nn-rs gr-w -n
th- g--dw-ll -f  rs.  -rst -nd  -ss  -ngl-y; -nd th--gh th- m-th-r w-s
f--nd t- b- -nt-l-r-bl-, -nd th- y--ng-r s-st-rs n-t w-rth sp--k-ng t-,
- w-sh -f b--ng b-tt-r -cq---nt-d w-th _th-m_ w-s -xpr-ss-d t-w-rds
th- tw- -ld-st.  y  -n-, th-s -tt-nt--n w-s r-c--v-d w-th th- gr--t-st
pl--s-r-, b-t -l-z-b-th st-ll s-w s-p-rc-l---sn-ss -n th--r tr--tm-nt
-f -v-ryb-dy, h-rdly -xc-pt-ng -v-n h-r s-st-r, -nd c--ld n-t l-k- th-m;
th--gh th--r k-ndn-ss t-  -n-, s-ch -s -t w-s, h-d - v-l-- -s -r-s-ng -n
-ll pr-b-b-l-ty fr-m th- -nfl--nc- -f th--r br-th-r's -dm-r-t--n. -t
w-s g-n-r-lly -v-d-nt wh-n-v-r th-y m-t, th-t h- _d-d_ -dm-r- h-r -nd
t- _h-r_ -t w-s -q--lly -v-d-nt th-t  -n- w-s y--ld-ng t- th- pr-f-r-nc-
wh-ch sh- h-d b-g-n t- -nt-rt--n f-r h-m fr-m th- f-rst, -nd w-s -n -
w-y t- b- v-ry m-ch -n l-v-; b-t sh- c-ns-d-r-d w-th pl--s-r- th-t -t
w-s n-t l-k-ly t- b- d-sc-v-r-d by th- w-rld -n g-n-r-l, s-nc-  -n-
-n-t-d, w-th gr--t str-ngth -f f--l-ng, - c-mp-s-r- -f t-mp-r -nd -
-n-f-rm ch--rf-ln-ss -f m-nn-r wh-ch w--ld g--rd h-r fr-m th- s-sp-c--ns
-f th- -mp-rt-n-nt.  h- m-nt--n-d th-s t- h-r fr--nd  -ss  -c-s.

“-t m-y p-rh-ps b- pl--s-nt,” r-pl--d  h-rl-tt-, “t- b- -bl- t- -mp-s-
-n th- p-bl-c -n s-ch - c-s-; b-t -t -s s-m-t-m-s - d-s-dv-nt-g- t- b-
s- v-ry g--rd-d. -f - w-m-n c-nc--ls h-r -ff-ct--n w-th th- s-m- sk-ll
fr-m th- -bj-ct -f -t, sh- m-y l-s- th- -pp-rt-n-ty -f f-x-ng h-m; -nd
-t w-ll th-n b- b-t p--r c-ns-l-t--n t- b-l--v- th- w-rld -q--lly -n
th- d-rk.  h-r- -s s- m-ch -f gr-t-t-d- -r v-n-ty -n -lm-st -v-ry
-tt-chm-nt, th-t -t -s n-t s-f- t- l--v- -ny t- -ts-lf.  - c-n -ll
_b-g-n_ fr--ly--- sl-ght pr-f-r-nc- -s n-t-r-l -n--gh; b-t th-r- -r-
v-ry f-w -f -s wh- h-v- h--rt -n--gh t- b- r--lly -n l-v- w-th--t
-nc--r-g-m-nt. -n n-n- c-s-s --t -f t-n - w-m-n h-d b-tt-r sh-w _m-r-_
-ff-ct--n th-n sh- f--ls.  -ngl-y l-k-s y--r s-st-r -nd--bt-dly; b-t h-
m-y n-v-r d- m-r- th-n l-k- h-r, -f sh- d--s n-t h-lp h-m -n.”

“ -t sh- d--s h-lp h-m -n, -s m-ch -s h-r n-t-r- w-ll -ll-w. -f - c-n
p-rc--v- h-r r-g-rd f-r h-m, h- m-st b- - s-mpl-t-n, -nd--d, n-t t-
d-sc-v-r -t t--.”

“ -m-mb-r, -l-z-, th-t h- d--s n-t kn-w  -n-'s d-sp-s-t--n -s y-- d-.”

“ -t -f - w-m-n -s p-rt--l t- - m-n, -nd d--s n-t -nd--v--r t- c-nc--l
-t, h- m-st f-nd -t --t.”

“ -rh-ps h- m-st, -f h- s--s -n--gh -f h-r.  -t, th--gh  -ngl-y -nd  -n-
m--t t-l-r-bly -ft-n, -t -s n-v-r f-r m-ny h--rs t-g-th-r; -nd, -s th-y
-lw-ys s-- --ch -th-r -n l-rg- m-x-d p-rt--s, -t -s -mp-ss-bl- th-t
-v-ry m-m-nt sh--ld b- -mpl-y-d -n c-nv-rs-ng t-g-th-r.  -n- sh--ld
th-r-f-r- m-k- th- m-st -f -v-ry h-lf-h--r -n wh-ch sh- c-n c-mm-nd h-s
-tt-nt--n.  h-n sh- -s s-c-r- -f h-m, th-r- w-ll b- m-r- l--s-r- f-r
f-ll-ng -n l-v- -s m-ch -s sh- ch--s-s.”

“ --r pl-n -s - g--d -n-,” r-pl--d -l-z-b-th, “wh-r- n-th-ng -s -n
q--st--n b-t th- d-s-r- -f b--ng w-ll m-rr--d, -nd -f - w-r- d-t-rm-n-d
t- g-t - r-ch h-sb-nd, -r -ny h-sb-nd, - d-r- s-y - sh--ld -d-pt -t.  -t
th-s- -r- n-t  -n-'s f--l-ngs; sh- -s n-t -ct-ng by d-s-gn. -s y-t,
sh- c-nn-t -v-n b- c-rt--n -f th- d-gr-- -f h-r -wn r-g-rd n-r -f -ts
r--s-n-bl-n-ss.  h- h-s kn-wn h-m -nly - f-rtn-ght.  h- d-nc-d f--r
d-nc-s w-th h-m -t  -ryt-n; sh- s-w h-m -n- m-rn-ng -t h-s -wn h--s-,
-nd h-s s-nc- d-n-d w-th h-m -n c-mp-ny f--r t-m-s.  h-s -s n-t q--t-
-n--gh t- m-k- h-r -nd-rst-nd h-s ch-r-ct-r.”

“ -t -s y-- r-pr-s-nt -t.  -d sh- m-r-ly _d-n-d_ w-th h-m, sh- m-ght
-nly h-v- d-sc-v-r-d wh-th-r h- h-d - g--d -pp-t-t-; b-t y-- m-st
r-m-mb-r th-t f--r -v-n-ngs h-v- -ls- b--n sp-nt t-g-th-r---nd f--r
-v-n-ngs m-y d- - gr--t d--l.”

“ -s; th-s- f--r -v-n-ngs h-v- -n-bl-d th-m t- -sc-rt--n th-t th-y
b-th l-k-  -ngt--n b-tt-r th-n  -mm-rc-; b-t w-th r-sp-ct t- -ny -th-r
l--d-ng ch-r-ct-r-st-c, - d- n-t -m-g-n- th-t m-ch h-s b--n -nf-ld-d.”

“ -ll,” s--d  h-rl-tt-, “- w-sh  -n- s-cc-ss w-th -ll my h--rt; -nd
-f sh- w-r- m-rr--d t- h-m t--m-rr-w, - sh--ld th-nk sh- h-d -s g--d -
ch-nc- -f h-pp-n-ss -s -f sh- w-r- t- b- st-dy-ng h-s ch-r-ct-r f-r -
tw-lv-m-nth.  -pp-n-ss -n m-rr--g- -s -nt-r-ly - m-tt-r -f ch-nc-. -f
th- d-sp-s-t--ns -f th- p-rt--s -r- -v-r s- w-ll kn-wn t- --ch -th-r -r
-v-r s- s-m-l-r b-f-r-h-nd, -t d--s n-t -dv-nc- th--r f-l-c-ty -n th-
l--st.  h-y -lw-ys c-nt-n-- t- gr-w s-ff-c--ntly -nl-k- -ft-rw-rds t-
h-v- th--r sh-r- -f v-x-t--n; -nd -t -s b-tt-r t- kn-w -s l-ttl- -s
p-ss-bl- -f th- d-f-cts -f th- p-rs-n w-th wh-m y-- -r- t- p-ss y--r
l-f-.”

“ -- m-k- m- l--gh,  h-rl-tt-; b-t -t -s n-t s--nd.  -- kn-w -t -s n-t
s--nd, -nd th-t y-- w--ld n-v-r -ct -n th-s w-y y--rs-lf.”

-cc-p--d -n -bs-rv-ng  r.  -ngl-y's -tt-nt--ns t- h-r s-st-r, -l-z-b-th
w-s f-r fr-m s-sp-ct-ng th-t sh- w-s h-rs-lf b-c-m-ng -n -bj-ct -f s-m-
-nt-r-st -n th- -y-s -f h-s fr--nd.  r.  -rcy h-d -t f-rst sc-rc-ly
-ll-w-d h-r t- b- pr-tty; h- h-d l--k-d -t h-r w-th--t -dm-r-t--n -t th-
b-ll; -nd wh-n th-y n-xt m-t, h- l--k-d -t h-r -nly t- cr-t-c-s-.  -t n-
s--n-r h-d h- m-d- -t cl--r t- h-ms-lf -nd h-s fr--nds th-t sh- h-rdly
h-d - g--d f--t-r- -n h-r f-c-, th-n h- b-g-n t- f-nd -t w-s r-nd-r-d
-nc-mm-nly -nt-ll-g-nt by th- b---t-f-l -xpr-ss--n -f h-r d-rk -y-s.  -
th-s d-sc-v-ry s-cc--d-d s-m- -th-rs -q--lly m-rt-fy-ng.  h--gh h- h-d
d-t-ct-d w-th - cr-t-c-l -y- m-r- th-n -n- f--l-r- -f p-rf-ct symm-try
-n h-r f-rm, h- w-s f-rc-d t- -ckn-wl-dg- h-r f-g-r- t- b- l-ght -nd
pl--s-ng; -nd -n sp-t- -f h-s -ss-rt-ng th-t h-r m-nn-rs w-r- n-t th-s-
-f th- f-sh--n-bl- w-rld, h- w-s c--ght by th--r --sy pl-yf-ln-ss. -f
