 h-pt-r 28


-v-ry -bj-ct -n th- n-xt d-y's j--rn-y w-s n-w -nd -nt-r-st-ng t-
-l-z-b-th; -nd h-r sp-r-ts w-r- -n - st-t- -f -nj-ym-nt; f-r sh- h-d
s--n h-r s-st-r l--k-ng s- w-ll -s t- b-n-sh -ll f--r f-r h-r h--lth,
-nd th- pr-sp-ct -f h-r n-rth-rn t--r w-s - c-nst-nt s--rc- -f d-l-ght.

 h-n th-y l-ft th- h-gh r--d f-r th- l-n- t-  -nsf-rd, -v-ry -y- w-s -n
