b--ld-ng, st-nd-ng w-ll -n r-s-ng gr--nd, -nd b-ck-d by - r-dg- -f
h-gh w--dy h-lls; -nd -n fr-nt, - str--m -f s-m- n-t-r-l -mp-rt-nc- w-s
sw-ll-d -nt- gr--t-r, b-t w-th--t -ny -rt-f-c--l -pp--r-nc-. -ts b-nks
