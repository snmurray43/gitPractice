“_ -r_ n-t -bj-ct-ng d--s n-t j-st-fy _h-m_. -t -nly sh-ws h-r b--ng
d-f-c--nt -n s-m-th-ng h-rs-lf--s-ns- -r f--l-ng.”

“ -ll,” cr--d -l-z-b-th, “h-v- -t -s y-- ch--s-. _ -_ sh-ll b-
m-rc-n-ry, -nd _sh-_ sh-ll b- f--l-sh.”

“ -,  -zzy, th-t -s wh-t - d- _n-t_ ch--s-. - sh--ld b- s-rry, y-- kn-w,
t- th-nk -ll -f - y--ng m-n wh- h-s l-v-d s- l-ng -n  -rbysh-r-.”

“-h! -f th-t -s -ll, - h-v- - v-ry p--r -p-n--n -f y--ng m-n wh- l-v- -n
 -rbysh-r-; -nd th--r -nt-m-t- fr--nds wh- l-v- -n  -rtf-rdsh-r- -r- n-t
m-ch b-tt-r. - -m s-ck -f th-m -ll.  h-nk  --v-n! - -m g--ng t--m-rr-w
wh-r- - sh-ll f-nd - m-n wh- h-s n-t -n- -gr---bl- q--l-ty, wh- h-s
n--th-r m-nn-r n-r s-ns- t- r-c-mm-nd h-m.  t-p-d m-n -r- th- -nly -n-s
w-rth kn-w-ng, -ft-r -ll.”

“ -k- c-r-,  -zzy; th-t sp--ch s-v--rs str-ngly -f d-s-pp--ntm-nt.”

 -f-r- th-y w-r- s-p-r-t-d by th- c-ncl-s--n -f th- pl-y, sh- h-d th-
-n-xp-ct-d h-pp-n-ss -f -n -nv-t-t--n t- -cc-mp-ny h-r -ncl- -nd --nt -n
- t--r -f pl--s-r- wh-ch th-y pr-p-s-d t-k-ng -n th- s-mm-r.

