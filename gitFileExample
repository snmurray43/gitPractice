h-rd-h--rt-dn-ss -n -ny -f th- f-m-ly.

“ --d  --v-n! wh-t -s t- b-c-m- -f -s?  h-t -r- w- t- d-?” w--ld th-y
-ft-n -xcl--m -n th- b-tt-rn-ss -f w--. “ -w c-n y-- b- sm-l-ng s-,
 -zzy?”

 h--r -ff-ct--n-t- m-th-r sh-r-d -ll th--r gr--f; sh- r-m-mb-r-d wh-t
sh- h-d h-rs-lf -nd-r-d -n - s-m-l-r -cc-s--n, f-v---nd-tw-nty y--rs
-g-.

“- -m s-r-,” s--d sh-, “- cr--d f-r tw- d-ys t-g-th-r wh-n  -l-n-l
 -ll-r's r-g-m-nt w-nt -w-y. - th--ght - sh--ld h-v- br-k-n my h--rt.”

“- -m s-r- - sh-ll br--k _m-n-_,” s--d  yd--.

“-f -n- c--ld b-t g- t-  r-ght-n!” -bs-rv-d  rs.  -nn-t.

“-h, y-s!---f -n- c--ld b-t g- t-  r-ght-n!  -t p-p- -s s-
d-s-gr---bl-.”

“- l-ttl- s---b-th-ng w--ld s-t m- -p f-r-v-r.”

