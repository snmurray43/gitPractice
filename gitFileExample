t-rn-ng t- -l-z-b-th, s--d:

“ -ss -l-z-  -nn-t, l-t m- p-rs--d- y-- t- f-ll-w my -x-mpl-, -nd t-k- -
t-rn -b--t th- r--m. - -ss-r- y-- -t -s v-ry r-fr-sh-ng -ft-r s-tt-ng s-
l-ng -n -n- -tt-t-d-.”

-l-z-b-th w-s s-rpr-s-d, b-t -gr--d t- -t -mm-d--t-ly.  -ss  -ngl-y
