th- r--m t-g-th-r, w-th --th-r -f wh-ch m-t-v-s h-s j--n-ng th-m w--ld
-nt-rf-r-. “ h-t c--ld h- m--n?  h- w-s dy-ng t- kn-w wh-t c--ld b- h-s
m--n-ng?”---nd -sk-d -l-z-b-th wh-th-r sh- c--ld -t -ll -nd-rst-nd h-m?

“ -t -t -ll,” w-s h-r -nsw-r; “b-t d-p-nd -p-n -t, h- m--ns t- b- s-v-r-
-n -s, -nd --r s-r-st w-y -f d-s-pp--nt-ng h-m w-ll b- t- -sk n-th-ng
