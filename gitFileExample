th- -g- -f tw-nty-s-v-n, w-th--t h-v-ng -v-r b--n h-nds-m-, sh- f-lt -ll
th- g--d l-ck -f -t.  h- l--st -gr---bl- c-rc-mst-nc- -n th- b-s-n-ss
w-s th- s-rpr-s- -t m-st -cc-s--n t- -l-z-b-th  -nn-t, wh-s- fr--ndsh-p
