r-v-rs-.  h-r- -s - m-xt-r- -f s-rv-l-ty -nd s-lf--mp-rt-nc- -n h-s
l-tt-r, wh-ch pr-m-s-s w-ll. - -m -mp-t--nt t- s-- h-m.”

“-n p--nt -f c-mp-s-t--n,” s--d  -ry, “th- l-tt-r d--s n-t s--m
