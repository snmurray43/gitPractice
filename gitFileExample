h-m--r,” s--d sh-, “-nd - -m m-r- -bl-g-d t- y-- th-n - c-n -xpr-ss.”
  h-rl-tt- -ss-r-d h-r fr--nd -f h-r s-t-sf-ct--n -n b--ng -s-f-l, -nd
